{
    "id": "bahmni.registration",
    "instanceOf":"bahmni.template.registration",
    "description": "Bahmni Patient Registration App",
    "config" : {
        "patientInformation": {},
        "defaultIdentifierPrefix": "ABC",
        "showMiddleName": true,
        "showLastName": true,
        "isLastNameMandatory": true,
        "patientNameDisplayOrder": ["firstName", "middleName", "lastName"],
        "showSaveConfirmDialog": false,
        "showBirthTime": true,
        "fieldValidation" : {
            "email" : {"pattern" : "^(?=.{1,40}$)(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,4})$", "errorMessage" : "Should be a valid email address"},
            "familyName" : {"pattern" : "[a-zA-Z]{0,}", "errorMessage" : "Should contain characters"},
            "givenName" : {"pattern" : "[a-zA-Z]{0,}", "errorMessage" : "Should contain characters"},
            "middleName" : {"pattern" : "[a-zA-Z]{0,}", "errorMessage" : "Should contain characters"},
            "primaryContact" : {"pattern" : "^([+]91[-]?|91|)?([1-9]{1}[0-9]{9})$", "errorMessage" : "Contact should be this in format: +91-xxxxxxxxxx | 91xxxxxxxxxx | xxxxxxxxxx | +91xxxxxxxxxx"},
            "secondaryContact" : {"pattern" : "^([+]91[-]?|91|)?([1-9]{1}[0-9]{9})$", "errorMessage" : "Contact should be this in format: +91-xxxxxxxxxx | 91xxxxxxxxxx | xxxxxxxxxx | +91xxxxxxxxxx"}
        }
    }
}
